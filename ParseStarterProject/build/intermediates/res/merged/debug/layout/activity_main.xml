<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_light_disabled"
    android:backgroundTint="?android:attr/colorMultiSelectHighlight"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:backgroundTint="?android:attr/colorMultiSelectHighlight"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textAlignment="viewEnd" />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/passwordEditText"
        android:layout_marginTop="86dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:fontFamily="serif"
        android:onClick="signUp"
        android:text="MARK PRESENT"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordEditText"
        android:layout_alignStart="@+id/passwordEditText"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginTop="147dp"
        android:backgroundTint="?android:attr/colorMultiSelectHighlight"
        android:ems="10"
        android:hint="Enter your ID"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <Switch
        android:id="@+id/changeSignupModeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordEditText"
        android:layout_alignStart="@+id/passwordEditText"
        android:layout_below="@+id/signupButton"
        android:layout_marginTop="27dp"
        android:fontFamily="sans-serif"
        android:text="DBA? ->"
        android:textColor="@android:color/holo_red_dark" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/cast_intro_overlay_title_margin_top"
        android:layout_height="@dimen/cast_intro_overlay_title_margin_top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/chitlogo" />

</RelativeLayout>
